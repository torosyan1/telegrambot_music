{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "sourceMap": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ], // ** custom ones should go here "src/@types"
    "paths": {
    }
  },
  "include": [
    "/*.ts",
    "src/**/*.ts",
    "src/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "commitlint.config.js"
  ]
}
